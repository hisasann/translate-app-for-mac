{
  "name": "translate-app",
  "version": "1.0.0",
  "description": "🌍 英語⇄日本語双方向翻訳アプリ",
  "main": "main.js",
  "type": "module",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --inspect=5858",
    "build": "electron-builder",
    "build:mac": "electron-builder --mac",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux",
    "build:web": "npm run clean:web && npm run copy:web",
    "clean:web": "rm -rf dist && mkdir -p dist",
    "copy:web": "cp web.html dist/index.html && cp web-renderer.js dist/ && cp styles.css dist/ && cp slides.html dist/ && cp -r assets dist/ 2>/dev/null || true",
    "serve:web": "npx http-server dist -p 3000 -o",
    "test:web": "npm run build:web && npm run serve:web",
    "postinstall": "electron-builder install-app-deps",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage"
  },
  "build": {
    "appId": "com.yourname.translate-app",
    "productName": "Translate App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!README.md",
      "!dist/**/*",
      "!node_modules/**/*",
      "node_modules/electron/**/*",
      "node_modules/robotjs/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icon.png",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "portable",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        },
        {
          "target": "deb",
          "arch": [
            "x64"
          ]
        }
      ]
    }
  },
  "devDependencies": {
    "@eslint/js": "^9.29.0",
    "@playwright/test": "^1.53.0",
    "@vitest/ui": "^2.1.0",
    "electron": "^31.0.0",
    "electron-builder": "^26.0.12",
    "eslint": "^8.57.1",
    "globals": "^16.2.0",
    "http-server": "^14.1.1",
    "jsdom": "^25.0.0",
    "playwright": "^1.53.0",
    "vitest": "^2.1.0"
  },
  "dependencies": {
    "axios": "^1.7.0"
  },
  "keywords": [
    "translate",
    "translation",
    "english",
    "japanese",
    "electron",
    "desktop-app"
  ],
  "author": "Your Name",
  "license": "MIT"
}
